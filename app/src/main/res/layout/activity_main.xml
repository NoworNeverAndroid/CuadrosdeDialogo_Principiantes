<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nowor_000.cuadrosdedialogo.MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Dialog Fragment"
        android:id="@+id/btnDialogFragment"
        android:background="#0288D1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Alert Dialog Basico"
        android:id="@+id/btnAlertBasico"
        android:background="#03A9F4"
        android:layout_weight="1"
        android:textSize="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="ALERT DIALOG LISTA"
        android:id="@+id/btnAlertLista"
        android:background="#B3E5FC"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="ALERT DIALOG MULTIOPCION"
        android:id="@+id/btnMultiopcion"
        android:background="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="DIALOG PERSONALIZADO"
        android:id="@+id/btnPersonalizado"
        android:background="#CDDC39"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="15dp" />

</LinearLayout>
